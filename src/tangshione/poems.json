[
  {
    "title": "涼州詞",
    "author": "王翰",
    "content": [
      "葡萄美酒夜光杯",
      "欲飲琵琶馬上催",
      "醉臥沙場君莫笑",
      "古來征戰幾人回"
    ]
  },
  {
    "title": "賦得古原草送別",
    "author": "白居易",
    "content": [
      "離離原上草",
      "一歲一枯榮",
      "野火燒不盡",
      "春風吹又生",
      "遠芳侵古道",
      "晴翠接荒城",
      "又送王孫去",
      "萋萋滿別情"
    ]
  },
  {
    "title": "鳥",
    "author": "白居易",
    "content": [
      "誰道群生性命微",
      "一般骨肉一般皮",
      "勸君莫打枝頭鳥",
      "子在巢中望母歸"
    ]
  },
  {
    "title": "憶江南",
    "author": "白居易",
    "content": [
      "江南好",
      "風景舊曾諳",
      "日出江花紅勝火",
      "春來江水綠如藍",
      "能不憶江南"
    ]
  },
  {
    "title": "望月懷遠",
    "author": "張九齡",
    "content": [
      "海上生明月",
      "天涯共此時",
      "情人怨遙夜",
      "竟夕起相思",
      "滅燭憐光滿",
      "披衣覺露滋",
      "不堪盈手贈",
      "還寢夢佳期"
    ]
  },
  {
    "title": "回鄉偶書",
    "author": "賀知章",
    "content": [
      "少小離家老大回",
      "鄉音無改鬢毛衰",
      "兒童相見不相識",
      "笑問客從何處來"
    ]
  },
  {
    "title": "詠柳",
    "author": "賀知章",
    "content": [
      "碧玉妝成一樹高",
      "萬條垂下綠絲絛",
      "不知細葉誰裁出",
      "二月春風似剪刀"
    ]
  },
  {
    "title": "登鸛鵲樓",
    "author": "王之渙",
    "content": [
      "白日依山盡",
      "黃河入海流",
      "欲窮千里目",
      "更上一層樓"
    ]
  },
  {
    "title": "春曉",
    "author": "孟浩然",
    "content": [
      "春眠不覺曉",
      "處處聞啼鳥",
      "夜來風雨聲",
      "花落知多少"
    ]
  },
  {
    "title": "宿建德江",
    "author": "孟浩然",
    "content": [
      "移舟泊煙渚",
      "日暮客愁新",
      "野曠天低樹",
      "江清月近人"
    ]
  },
  {
    "title": "出塞",
    "author": "王昌齡",
    "content": [
      "秦時明月漢時關",
      "萬里長征人未還",
      "但使龍城飛將在",
      "不教胡馬度陰山"
    ]
  },
  {
    "title": "從軍行．其四",
    "author": "王昌齡",
    "content": [
      "青海長雲暗雪山",
      "孤城遙望玉門關",
      "黃沙百戰穿金甲",
      "不破樓蘭終不還"
    ]
  },
  {
    "title": "芙蓉樓送辛漸",
    "author": "王昌齡",
    "content": [
      "寒雨連江夜入吳",
      "平明送客楚山孤",
      "洛陽親友如相問",
      "一片冰心在玉壺"
    ]
  },
  {
    "title": "詠鵝",
    "author": "駱賓王",
    "content": [
      "鵝鵝鵝",
      "曲項向天歌",
      "白毛浮綠水",
      "紅掌撥清波"
    ]
  },
  {
    "title": "塞下曲",
    "author": "盧綸",
    "content": [
      "月黑雁飛高",
      "單于夜遁逃",
      "欲將輕騎逐",
      "大雪滿弓刀"
    ]
  },
  {
    "title": "登樂遊原",
    "author": "李商隱",
    "content": [
      "向晚意不適",
      "驅車登古原",
      "夕陽無限好",
      "只是近黃昏"
    ]
  },
  {
    "title": "九月九日憶山東兄弟",
    "author": "王維",
    "content": [
      "獨在異鄉為異客",
      "每逢佳節倍思親",
      "遙知兄弟登高處",
      "遍插茱萸少一人"
    ]
  },
  {
    "title": "送元二使安西（渭城曲）",
    "author": "王維",
    "content": [
      "渭城朝雨浥輕塵",
      "客舍青青柳色新",
      "勸君更盡一杯酒",
      "西出陽關無故人"
    ]
  },
  {
    "title": "鹿柴",
    "author": "王維",
    "content": [
      "空山不見人",
      "但聞人語響",
      "返景入深林",
      "復照青苔上"
    ]
  },
  {
    "title": "竹里館",
    "author": "王維",
    "content": [
      "獨坐幽篁裡",
      "彈琴復長嘯",
      "深林人不知",
      "明月來相照"
    ]
  },
  {
    "title": "江南逢李龜年",
    "author": "杜甫",
    "content": [
      "岐王宅裡尋常見",
      "崔九堂前幾度聞",
      "正是江南好風景",
      "落花時節又逢君"
    ]
  },
  {
    "title": "江畔獨步尋花",
    "author": "杜甫",
    "content": [
      "黃四娘家花滿蹊",
      "千朵萬朵壓枝低",
      "留連戲蝶時時舞",
      "自在嬌鶯恰恰啼"
    ]
  },
  {
    "title": "絕句",
    "author": "杜甫",
    "content": [
      "兩個黃鸝鳴翠柳",
      "一行白鷺上青天",
      "窗含西嶺千秋雪",
      "門泊東吳萬里船"
    ]
  },
  {
    "title": "絕句",
    "author": "杜甫",
    "content": [
      "遲日江山麗",
      "春風花草香",
      "泥融飛燕子",
      "沙暖睡鴛鴦"
    ]
  },
  {
    "title": "聞官軍收河南河北",
    "author": "杜甫",
    "content": [
      "劍外忽傳收薊北",
      "初聞涕淚滿衣裳",
      "卻看妻子愁何在",
      "漫卷詩書喜欲狂",
      "白日放歌須縱酒",
      "青春作伴好還鄉",
      "即從巴峽穿巫峽",
      "便下襄陽向洛陽"
    ]
  },
  {
    "title": "楓橋夜泊",
    "author": "張繼",
    "content": [
      "月落烏啼霜滿天",
      "江楓漁火對愁眠",
      "姑蘇城外寒山寺",
      "夜半鐘聲到客船"
    ]
  },
  {
    "title": "寒食",
    "author": "韓翃",
    "content": [
      "春城無處不飛花",
      "寒食東風御柳斜",
      "日暮漢宮傳蠟燭",
      "輕煙散入五侯家"
    ]
  },
  {
    "title": "滁州西澗",
    "author": "韋應物",
    "content": [
      "獨憐幽草澗邊生",
      "上有黃鸝深樹鳴",
      "春潮帶雨晚來急",
      "野渡無人舟自橫"
    ]
  },
  {
    "title": "遊子吟",
    "author": "孟郊",
    "content": [
      "慈母手中線",
      "遊子身上衣",
      "臨行密密縫",
      "意恐遲遲歸",
      "誰言寸草心",
      "報得三春暉"
    ]
  },
  {
    "title": "清明",
    "author": "杜牧",
    "content": [
      "清明時節雨紛紛",
      " 路上行人欲斷魂",
      "借問酒家何處有",
      "牧童遙指杏花村"
    ]
  },
  {
    "title": "山行",
    "author": "杜牧",
    "content": [
      "遠上寒山石徑斜",
      "白雲生處有人家",
      "停車坐愛楓林晚",
      "霜葉紅於二月花"
    ]
  },
  {
    "title": "江雪",
    "author": "柳宗元",
    "content": [
      "千山鳥飛絕",
      "萬徑人蹤滅",
      "孤舟簑笠翁",
      "獨釣寒江雪"
    ]
  },
  {
    "title": "靜夜思",
    "author": "李白",
    "content": [
      "床前明月光",
      "疑是地上霜",
      "舉頭望明月",
      "低頭思故鄉"
    ]
  },
  {
    "title": "望廬山瀑布",
    "author": "李白",
    "content": [
      "日照香爐生紫煙",
      "遙看瀑布掛前川",
      "飛流直下三千尺",
      "疑是銀河落九天"
    ]
  },
  {
    "title": "贈汪倫",
    "author": "李白",
    "content": [
      "李白乘舟將欲行",
      "忽聞岸上踏歌聲",
      "桃花潭水深千尺",
      "不及汪倫送我情"
    ]
  },
  {
    "title": "望天門山",
    "author": "李白",
    "content": [
      "天門中斷楚江開",
      "碧水東流至此回",
      "兩岸青山相對出",
      "孤帆一片日邊來"
    ]
  },
  {
    "title": "下江陵",
    "author": "李白",
    "content": [
      "朝辭白帝彩雲間",
      "千里江陵一日還",
      "兩岸猿聲啼不住",
      "輕舟已過萬重山"
    ]
  },
  {
    "title": "黃鶴樓送孟浩然之廣陵",
    "author": "李白",
    "content": [
      "故人西辭黃鶴樓",
      "煙花三月下揚州",
      "孤帆遠影碧空盡",
      "惟見長江天際流"
    ]
  },
  {
    "title": "逢雪宿芙蓉山主人",
    "author": "劉長卿",
    "content": [
      "日暮蒼山遠",
      "天寒白屋貧",
      "柴門聞犬吠",
      "風雪夜歸人"
    ]
  },
  {
    "title": "別董大",
    "author": "高適",
    "content": [
      "千里黃雲白日曛",
      "北風吹雁雪紛紛",
      "莫愁前路無知己",
      "天下誰人不識君"
    ]
  },
  {
    "title": "漁歌子",
    "author": "張志和",
    "content": [
      "西塞山前白鷺飛",
      "桃花流水鱖魚肥",
      "青箬笠",
      "綠蓑衣",
      "斜風細雨不須歸"
    ]
  },
  {
    "title": "烏衣巷",
    "author": "劉禹錫",
    "content": [
      "朱雀橋邊野草花",
      "烏衣巷口夕陽斜",
      "舊時王謝堂前燕",
      "飛入尋常百姓家"
    ]
  },
  {
    "title": "望洞庭",
    "author": "劉禹錫",
    "content": [
      "湖光秋月兩相和",
      "潭面無風鏡未磨",
      "遙望洞庭山水翠",
      "白銀盤裡一青螺"
    ]
  },
  {
    "title": "浪淘沙",
    "author": "劉禹錫",
    "content": [
      "九曲黃河萬里沙",
      "浪淘風簸自天涯",
      "如今直上銀河去",
      "同到牽牛織女家"
    ]
  },
  {
    "title": "竹枝詞",
    "author": "劉禹錫",
    "content": [
      "楊柳青青江水平",
      "聞郎江上唱歌聲",
      "東邊日出西邊雨",
      "道是無晴卻有晴"
    ]
  },
  {
    "title": "商山早行",
    "author": "溫庭筠",
    "content": [
      "晨起動征鐸",
      "客行悲故鄉",
      "雞聲茅店月",
      "人跡板橋霜",
      "槲葉落山路",
      "枳花明驛牆",
      "因思杜陵夢",
      "鳧雁滿回塘"
    ]
  }
]
