[
  {
    "title": "別滁",
    "author": "歐陽修",
    "content": [
      "花光濃爛柳輕明",
      "酌酒花前送我行",
      "我亦且如常日醉",
      "莫教弦管作離聲"
    ]
  },
  {
    "title": "連州陽山歸路",
    "author": "呂本中",
    "content": [
      "稍離煙瘴近湘潭",
      "疾病衰頹已不堪",
      "兒女不知來避地",
      "強言風物勝江南"
    ]
  },
  {
    "title": "池州翠微亭",
    "author": "岳飛",
    "content": [
      "經年塵土滿征衣",
      "特特尋芳上翠微",
      "好水好山看不足",
      "馬蹄催趁月明歸"
    ]
  },
  {
    "title": "立春偶成",
    "author": "張栻",
    "content": [
      "律回歲晚冰霜少",
      "春到人間草木知",
      "便覺眼前生意滿",
      "東風吹水綠參差"
    ]
  },
  {
    "title": "柳枝詞",
    "author": "鄭文寶",
    "content": [
      "亭亭畫舸系春潭",
      "直到行人酒半酣",
      "不管煙波與風雨",
      "載將離恨過江南"
    ]
  },
  {
    "title": "劍門道中遇微雨",
    "author": "陸游",
    "content": [
      "衣上征塵雜酒痕",
      "遠遊無處不消魂",
      "此身合是詩人未",
      "細雨騎驢入劍門"
    ]
  },
  {
    "title": "還自廣陵",
    "author": "秦觀",
    "content": [
      "天寒水鳥自相依",
      "十百為羣戲落暉",
      "過盡行人都不起",
      "忽聞水響一齊飛"
    ]
  },
  {
    "title": "疊題烏江亭",
    "author": "王安石",
    "content": [
      "百戰疲勞壯士哀",
      "中原一敗勢難回",
      "江東子弟今雖在",
      "肯與君王捲土來"
    ]
  },
  {
    "title": "初夏遊張園",
    "author": "戴敏",
    "content": [
      "乳鴨池塘水淺深",
      "熟梅天氣半陰晴",
      "東園載酒西園醉",
      "摘盡枇杷一樹金"
    ]
  },
  {
    "title": "村居",
    "author": "張舜民",
    "content": [
      "水繞陂田竹繞籬",
      "榆錢落盡槿花稀",
      "夕陽牛背無人臥",
      "帶得寒鴉兩兩歸"
    ]
  },
  {
    "title": "梅花絕句．其一",
    "author": "陸游",
    "content": [
      "聞道梅花坼曉風",
      "雪堆遍滿四山中",
      "何方可化身千億",
      "一樹梅花一放翁"
    ]
  },
  {
    "title": "蠶婦",
    "author": "張俞",
    "content": [
      "昨日入城市",
      "歸來淚滿巾",
      "遍身羅綺者",
      "不是養蠶人"
    ]
  },
  {
    "title": "州橋",
    "author": "范成大",
    "content": [
      "南望朱雀門",
      "北望宣德樓",
      "皆舊御路也",
      "州橋南北是天街",
      "父老年年等駕回",
      "忍淚失聲詢使者",
      "幾時真有六軍來"
    ]
  },
  {
    "title": "夏日田園雜興．其七",
    "author": "范成大",
    "content": [
      "晝出耘田夜績麻",
      "村莊兒女各當家",
      "童孫未解供耕織",
      "也傍桑陰學種瓜"
    ]
  },
  {
    "title": "登快閣",
    "author": "黃庭堅",
    "content": [
      "癡兒了卻公家事",
      "快閣東西倚晚晴",
      "落木千山天遠大",
      "澄江一道月分明",
      "朱弦已為佳人絕",
      "青眼聊因美酒橫",
      "萬里歸船弄長笛",
      "此心吾與白鷗盟"
    ]
  },
  {
    "title": "鄉思",
    "author": "李覯",
    "content": [
      "人言落日是天涯",
      "望極天涯不見家",
      "已恨碧山相阻隔",
      "碧山還被暮雲遮"
    ]
  },
  {
    "title": "海棠",
    "author": "蘇軾",
    "content": [
      "東風嫋嫋泛崇光",
      "香霧空濛月轉廊",
      "只恐夜深花睡去",
      "故燒高燭照紅妝"
    ]
  },
  {
    "title": "月兒彎彎照九州",
    "author": "佚名",
    "content": [
      "月兒彎彎照九州",
      "幾家歡樂幾家愁",
      "幾家夫婦同羅帳",
      "幾個飄零在外頭"
    ]
  },
  {
    "title": "春居雜興．兩株桃杏映籬斜",
    "author": "王禹偁",
    "content": [
      "兩株桃杏映籬斜",
      "妝點商州副使家",
      "何事春風容不得",
      "和鶯吹折數枝花"
    ]
  },
  {
    "title": "惠崇春江晚景 / 惠崇春江曉景",
    "author": "蘇軾",
    "content": [
      "竹外桃花三兩枝",
      "春江水暖鴨先知",
      "蔞蒿滿地蘆芽短",
      "正是河豚欲上時"
    ]
  },
  {
    "title": "豐樂亭遊春．其三",
    "author": "歐陽修",
    "content": [
      "紅樹青山日欲斜",
      "長郊草色綠無涯",
      "遊人不管春將老",
      "來往亭前踏落花"
    ]
  },
  {
    "title": "江村晚眺",
    "author": "戴復古",
    "content": [
      "江頭落日照平沙",
      "潮退漁船閣岸斜",
      "白鳥一雙臨水立",
      "見人驚起入蘆花"
    ]
  },
  {
    "title": "舟過安仁",
    "author": "楊萬里",
    "content": [
      "一葉漁船兩小童",
      "收篙停棹坐船中",
      "怪生無雨都張傘",
      "不是遮頭是使風"
    ]
  },
  {
    "title": "夏意",
    "author": "蘇舜欽",
    "content": [
      "別院深深夏席清",
      "石榴開遍透簾明",
      "樹陰滿地日當午",
      "夢覺流鶯時一聲"
    ]
  },
  {
    "title": "春遊湖",
    "author": "徐俯",
    "content": [
      "雙飛燕子幾時回",
      "夾岸桃花蘸水開",
      "春雨斷橋人不度",
      "小舟撐出柳陰來"
    ]
  },
  {
    "title": "宿新市徐公店",
    "author": "楊萬里",
    "content": [
      "籬落疏疏一徑深",
      "樹頭花落未成陰",
      "兒童急走追黃蝶",
      "飛入菜花無處尋"
    ]
  },
  {
    "title": "病牛",
    "author": "李綱",
    "content": [
      "耕犁千畝實千箱",
      "力盡筋疲誰復傷",
      "但得衆生皆得飽",
      "不辭羸病臥殘陽"
    ]
  },
  {
    "title": "雨後池上",
    "author": "劉攽",
    "content": [
      "一雨池塘水面平",
      "淡磨明鏡照檐楹",
      "東風忽起垂楊舞",
      "更作荷心萬點聲"
    ]
  },
  {
    "title": "梅花 / 梅",
    "author": "王安石",
    "content": [
      "牆角數枝梅",
      "凌寒獨自開",
      "遙知不是雪",
      "為有暗香來"
    ]
  },
  {
    "title": "病起書懷",
    "author": "陸游",
    "content": [
      "病骨支離紗帽寬",
      "孤臣萬里客江干",
      "位卑未敢忘憂國",
      "事定猶須待闔棺",
      "天地神靈扶廟社",
      "京華父老望和鑾",
      "出師一表通今古",
      "夜半挑燈更細看"
    ]
  },
  {
    "title": "元日",
    "author": "王安石",
    "content": [
      "爆竹聲中一歲除",
      "春風送暖入屠蘇",
      "千門萬戶曈曈日",
      "總把新桃換舊符"
    ]
  },
  {
    "title": "汴京紀事",
    "author": "劉子翬",
    "content": [
      "輦轂繁華事可傷",
      "師師重老過湖湘",
      "縷衣檀板無顏色",
      "一曲當時動帝王"
    ]
  },
  {
    "title": "魯山山行",
    "author": "梅堯臣",
    "content": [
      "適與野情愜",
      "千山高復低",
      "好峯隨處改",
      "幽徑獨行迷",
      "霜落熊升樹",
      "林空鹿飲溪",
      "人家在何許",
      "雲外一聲雞"
    ]
  },
  {
    "title": "襄邑道中",
    "author": "陳與義",
    "content": [
      "飛花兩岸照船紅",
      "百里榆堤半日風",
      "臥看滿天雲不動",
      "不知雲與我俱東"
    ]
  },
  {
    "title": "三衢道中",
    "author": "曾幾",
    "content": [
      "梅子黃時日日晴",
      "小溪泛盡卻山行",
      "綠陰不減來時路",
      "添得黃鸝四五聲"
    ]
  },
  {
    "title": "過零丁洋",
    "author": "文天祥",
    "content": [
      "辛苦遭逢起一經",
      "干戈寥落四周星",
      "山河破碎風飄絮",
      "身世浮沉雨打萍",
      "惶恐灘頭說惶恐",
      "零丁洋裏嘆零丁",
      "人生自古誰無死",
      "留取丹心照汗青"
    ]
  },
  {
    "title": "遊園不值",
    "author": "葉紹翁",
    "content": [
      "應憐屐齒印蒼苔",
      "小扣柴扉久不開",
      "春色滿園關不住",
      "一枝紅杏出牆來"
    ]
  },
  {
    "title": "曉出淨慈寺送林子方",
    "author": "楊萬里",
    "content": [
      "畢竟西湖六月中",
      "風光不與四時同",
      "接天蓮葉無窮碧",
      "映日荷花別樣紅"
    ]
  },
  {
    "title": "泊船瓜洲",
    "author": "王安石",
    "content": [
      "京口瓜洲一水間",
      "鐘山只隔數重山",
      "春風又綠江南岸",
      "明月何時照我還"
    ]
  },
  {
    "title": "山園小梅．其一",
    "author": "林逋",
    "content": [
      "衆芳搖落獨暄妍",
      "佔盡風情向小園",
      "疏影橫斜水清淺",
      "暗香浮動月黃昏",
      "霜禽欲下先偷眼",
      "粉蝶如知合斷魂",
      "幸有微吟可相狎",
      "不須檀板共金尊"
    ]
  },
  {
    "title": "雪梅．其一",
    "author": "盧梅坡",
    "content": [
      "梅雪爭春未肯降",
      "騷人擱筆費評章",
      "梅須遜雪三分白",
      "雪卻輸梅一段香"
    ]
  },
  {
    "title": "畫菊",
    "author": "鄭思肖",
    "content": [
      "花開不併百花叢",
      "獨立疏籬趣未窮",
      "寧可枝頭抱香死",
      "何曾吹落北風中"
    ]
  },
  {
    "title": "春暮",
    "author": "曹豳",
    "content": [
      "門外無人問落花",
      "綠陰冉冉遍天涯",
      "林鶯啼到無聲處",
      "青草池塘獨聽蛙"
    ]
  },
  {
    "title": "鶯梭",
    "author": "劉克莊",
    "content": [
      "擲柳遷喬太有情",
      "交交時作弄機聲",
      "洛陽三月花如錦",
      "多少工夫織得成"
    ]
  },
  {
    "title": "落梅",
    "author": "劉克莊",
    "content": [
      "一片能教一斷腸",
      "可堪平砌更堆牆",
      "飄如遷客來過嶺",
      "墜似騷人去赴湘",
      "亂點莓苔多莫數",
      "偶粘衣袖久猶香",
      "東風謬掌花權柄",
      "卻忌孤高不主張"
    ]
  },
  {
    "title": "淮村兵後",
    "author": "戴復古",
    "content": [
      "小桃無主自開花",
      "菸草茫茫帶曉鴉",
      "幾處敗垣圍故井",
      "向來一一是人家"
    ]
  },
  {
    "title": "鄉村四月",
    "author": "翁卷",
    "content": [
      "綠遍山原白滿川",
      "子規聲裏雨如煙",
      "鄉村四月閑人少",
      "才了蠶桑又插田"
    ]
  },
  {
    "title": "新涼",
    "author": "徐璣",
    "content": [
      "水滿田疇稻葉齊",
      "日光穿樹曉煙低",
      "黃鶯也愛新涼好",
      "飛過青山影裏啼"
    ]
  },
  {
    "title": "除放自石湖歸苕溪",
    "author": "姜夔",
    "content": [
      "美人臺上昔歡娛",
      "今日空臺望五湖",
      "殘雪未融青草死",
      "苦無麋鹿過姑蘇",
      "黃帽傳呼睡不成",
      "投篙細細激流冰",
      "分明舊泊江南岸",
      "舟尾春風颭客燈",
      "千門列炬散林鴉",
      "兒女相思未到家",
      "應是不眠非守歲",
      "小客春意入燈花",
      "三生定自陸天隨",
      "又向順鬆作客歸",
      "已拚新年舟上過",
      "倩人和雪洗片衣",
      "沙尾風回一棹寒",
      "椒花今夕不登盤",
      "百年草草都寒夜",
      "自琢春詞剪燭看",
      "笠澤茫茫雁影微",
      "玉峯重疊護雲衣",
      "長橋寂寞春寒放",
      "只有詩人一舸歸",
      "桑間篝火卻定蠶",
      "風土相傳我未諳",
      "但得明年少行役",
      "只裁白佇作春衫",
      "少小知名翰墨場",
      "十年心事只淒涼",
      "舊時曾作梅花賦",
      "研墨於今亦自香",
      "環玦隨波冷未銷",
      "古苔留雪臥牆腰",
      "誰家玉笛吹春怨",
      "看見鵝黃上柳條"
    ]
  },
  {
    "title": "題臨安邸",
    "author": "林升",
    "content": [
      "山外青山樓外樓",
      "西湖歌舞幾時休",
      "暖風薰得遊人醉",
      "直把杭州作汴州"
    ]
  },
  {
    "title": "小池",
    "author": "楊萬里",
    "content": [
      "泉眼無聲惜細流",
      "樹陰照水愛晴柔",
      "小荷才露尖尖角",
      "早有蜻蜓立上頭"
    ]
  },
  {
    "title": "初入淮河四絕句．其三",
    "author": "楊萬里",
    "content": [
      "兩岸舟船各背馳",
      "波痕交涉亦難為",
      "只餘鷗鷺無拘管",
      "北去南來自在飛"
    ]
  },
  {
    "title": "三江小渡",
    "author": "楊萬里",
    "content": [
      "溪水將橋不復回",
      "小舟猶倚短篙開",
      "交情得似山溪渡",
      "不管風波去又來"
    ]
  },
  {
    "title": "十一月四日風雨大作",
    "author": "陸游",
    "content": [
      "風捲江湖雨暗村",
      "四山聲作海濤翻",
      "溪柴火軟蠻氈暖",
      "我與狸奴不出門",
      "僵臥孤村不自哀",
      "尚思為國戍輪臺",
      "夜闌臥聽風吹雨",
      "鐵馬冰河入夢來"
    ]
  },
  {
    "title": "樵夫",
    "author": "蕭德藻",
    "content": [
      "一擔乾柴古渡頭",
      "盤纏一日頗優遊",
      "歸來澗底磨刀斧",
      "又作全家明日謀"
    ]
  },
  {
    "title": "詠牡丹",
    "author": "陳與義",
    "content": [
      "一自胡塵入漢關",
      "十年伊洛路漫漫",
      "青墩溪畔龍鍾客",
      "獨立東風看牡丹"
    ]
  },
  {
    "title": "蘇秀道中",
    "author": "曾幾",
    "content": [
      "一夕驕陽轉作霖",
      "夢迴涼冷潤衣襟",
      "不愁屋漏牀牀溼",
      "且喜溪流岸岸深",
      "千里稻花應秀色",
      "五更桐葉最佳音",
      "無田似我猶欣舞",
      "何況田間望歲心"
    ]
  },
  {
    "title": "夏日絕句",
    "author": "李清照",
    "content": [
      "生當作人傑",
      "死亦為鬼雄",
      "至今思項羽",
      "不肯過江東"
    ]
  },
  {
    "title": "春日",
    "author": "汪藻",
    "content": [
      "一春略無十日晴",
      "處處浮雲將雨行",
      "野田春水碧於鏡",
      "人影渡傍鷗不驚",
      "桃花嫣然出籬笑",
      "似開未開最有情",
      "茅茨煙暝客衣溼",
      "破夢午雞啼一聲"
    ]
  },
  {
    "title": "落花",
    "author": "朱淑真",
    "content": [
      "連理枝頭花正開",
      "妒花風雨便相催",
      "願教青帝常為主",
      "莫遣紛紛點翠苔"
    ]
  },
  {
    "title": "絕句",
    "author": "吳濤",
    "content": [
      "遊子春衫已試單",
      "桃花飛盡野梅酸",
      "任來一夜蛙聲歇",
      "又作東風十日寒"
    ]
  },
  {
    "title": "夜坐",
    "author": "張耒",
    "content": [
      "庭戶無人秋月明",
      "夜霜欲落氣先清",
      "梧桐真不甘衰謝",
      "數葉迎風尚有聲"
    ]
  },
  {
    "title": "春日",
    "author": "張耒",
    "content": [
      "如絲苣甲飣春盤",
      "韭葉金黃雪未乾",
      "旅飯二年無此味",
      "故園千里幾時還",
      "異方時節三巵酒",
      "殘歲風煙一慘顏",
      "曾奉龍旗典邦禮",
      "歲窮祠祀少休閑"
    ]
  },
  {
    "title": "春日",
    "author": "晁衝之",
    "content": [
      "陰陰溪曲綠交加",
      "小雨翻萍上淺沙",
      "鵝鴨不知春去盡",
      "爭隨流水趁桃花"
    ]
  },
  {
    "title": "臨平道中",
    "author": "道潛",
    "content": [
      "風蒲獵獵弄清柔",
      "欲立蜻蜓不自由",
      "五月臨平山下路",
      "藕花無數滿汀州"
    ]
  },
  {
    "title": "鄂州南樓書事",
    "author": "黃庭堅",
    "content": [
      "四顧山光接水光",
      "憑欄十里芰荷香",
      "清風明月無人管",
      "並作南樓一味涼"
    ]
  },
  {
    "title": "寄內",
    "author": "孔平仲",
    "content": [
      "試說途中景",
      "方知別後心",
      "行人日暮少",
      "風雪亂山深"
    ]
  },
  {
    "title": "禾熟",
    "author": "孔平仲",
    "content": [
      "百里西風禾黍香",
      "鳴泉落竇谷登場",
      "老牛粗了耕耘債",
      "齧草坡頭臥夕陽"
    ]
  },
  {
    "title": "贈劉景文 / 冬景",
    "author": "蘇軾",
    "content": [
      "荷盡已無擎雨蓋",
      "菊殘猶有傲霜枝",
      "一年好景君須記",
      "正是橙黃橘綠時"
    ]
  },
  {
    "title": "春宵",
    "author": "蘇軾",
    "content": [
      "春宵一刻值千金",
      "花有清香月有陰",
      "歌管樓臺聲細細",
      "鞦韆院落夜沉沉"
    ]
  },
  {
    "title": "城南",
    "author": "曾鞏",
    "content": [
      "雨過橫塘水滿堤",
      "亂山高下路東西",
      "一番桃李花開盡",
      "惟有青青草色齊"
    ]
  },
  {
    "title": "送春",
    "author": "王令",
    "content": [
      "三月殘花落更開",
      "小檐日日燕飛來",
      "子規夜半猶啼血",
      "不信東風喚不回"
    ]
  },
  {
    "title": "春夜",
    "author": "王安石",
    "content": [
      "金爐香燼漏聲殘",
      "剪剪輕風陣陣寒",
      "春色惱人眠不得",
      "月移花影上欄杆"
    ]
  },
  {
    "title": "初晴遊滄浪亭",
    "author": "蘇舜欽",
    "content": [
      "夜雨連明春水生",
      "嬌雲濃暖弄陰晴",
      "簾虛日薄花竹靜",
      "時有乳鳩相對鳴"
    ]
  },
  {
    "title": "考試畢登銓樓",
    "author": "梅堯臣",
    "content": [
      "春雲濃淡日微光",
      "雙闕重門聳建章",
      "不上樓來知幾日",
      "滿城無算柳梢黃"
    ]
  },
  {
    "title": "陶者",
    "author": "梅堯臣",
    "content": [
      "陶盡門前土",
      "屋上無片瓦",
      "十指不沾泥",
      "鱗鱗居大廈"
    ]
  },
  {
    "title": "詠傀儡",
    "author": "楊億",
    "content": [
      "鮑老當筵笑郭郎",
      "笑他舞袖太郎當",
      "若教鮑老當筵舞",
      "轉更郎當舞袖長"
    ]
  },
  {
    "title": "書河上亭壁",
    "author": "寇準",
    "content": [
      "岸闊檣稀波渺茫",
      "獨憑危檻思何長",
      "蕭蕭遠樹疏林外",
      "一半秋山帶夕陽"
    ]
  },
  {
    "title": "二礪",
    "author": "鄭思肖",
    "content": [
      "愁裏高歌梁父吟",
      "猶如金玉戛商音",
      "十年勾踐亡吳計",
      "七日包胥哭楚心",
      "秋送新鴻哀破國",
      "晝行飢虎齧空林",
      "胸中有誓深於海",
      "肯使神州竟陸沉"
    ]
  },
  {
    "title": "約客 / 有約",
    "author": "趙師秀",
    "content": [
      "黃梅時節家家雨",
      "青草池塘處處蛙",
      "有約不來過夜半",
      "閑敲棋子落燈花"
    ]
  },
  {
    "title": "活水亭觀書有感二首．其一",
    "author": "朱熹",
    "content": [
      "半畝方塘一鑑開",
      "天光雲影共徘徊",
      "問渠哪得清如許",
      "為有源頭活水來"
    ]
  },
  {
    "title": "橫塘",
    "author": "范成大",
    "content": [
      "南浦春來綠一川",
      "石橋朱塔兩依然",
      "年年送客橫塘路",
      "細雨垂楊系畫船"
    ]
  },
  {
    "title": "示兒",
    "author": "陸游",
    "content": [
      "死去元知萬事空",
      "但悲不見九州同",
      "王師北定中原日",
      "家祭無忘告乃翁"
    ]
  },
  {
    "title": "書憤五首．其一",
    "author": "陸游",
    "content": [
      "早歲那知世事艱",
      "中原北望氣如山",
      "樓船夜雪瓜洲渡",
      "鐵馬秋風大散關",
      "塞上長城空自許",
      "鏡中衰鬢已先斑",
      "出師一表真名世",
      "千載誰堪伯仲間"
    ]
  },
  {
    "title": "金錯刀行",
    "author": "陸游",
    "content": [
      "黃金錯刀白玉裝",
      "夜穿窗扉出光芒",
      "丈夫五十功未立",
      "提刀獨立顧八荒",
      "京華結交盡奇士",
      "意氣相期共生死",
      "千年史冊恥無名",
      "一片丹心報天子",
      "爾來從軍天漢濱",
      "南山曉雪玉嶙峋",
      "嗚呼",
      "楚雖三戶能亡秦",
      "豈有堂堂中國空無人"
    ]
  },
  {
    "title": "雨晴",
    "author": "陳與義",
    "content": [
      "天缺西南江面清",
      "纖雲不動小灘橫",
      "牆頭語鵲衣猶溼",
      "樓外殘雷氣未平",
      "盡取微涼供穩睡",
      "急搜奇句報新晴",
      "今宵絕勝無人共",
      "臥看星河盡意明"
    ]
  },
  {
    "title": "自責二首",
    "author": "朱淑真",
    "content": [
      "女子弄文誠可罪",
      "那堪詠月更吟風",
      "磨穿鐵硯非吾事",
      "繡折金針卻有功",
      "悶無消遣只看詩",
      "不見詩中話別離",
      "添得情懷轉蕭索",
      "始知伶俐不如癡"
    ]
  },
  {
    "title": "春懷示鄰里",
    "author": "陳師道",
    "content": [
      "斷牆著雨蝸成字",
      "老屋無僧燕作家",
      "剩欲出門追語笑",
      "卻嫌歸鬢著塵沙",
      "風翻蛛網開三面",
      "雷動蜂窠趁兩衙",
      "屢失南鄰春事約",
      "只今容有未開花"
    ]
  },
  {
    "title": "春日",
    "author": "秦觀",
    "content": [
      "一夕輕雷落萬絲",
      "霽光浮瓦碧參差",
      "有情芍藥含春淚",
      "無力薔薇臥曉枝"
    ]
  },
  {
    "title": "雨中登岳陽樓望君山",
    "author": "黃庭堅",
    "content": [
      "投荒萬死鬢毛斑",
      "生出瞿塘灩澦關",
      "未到江南先一笑",
      "岳陽樓上對君山",
      "滿川風雨獨憑欄",
      "綰結湘娥十二鬟",
      "可惜不當湖水面",
      "銀山堆裏看青山"
    ]
  },
  {
    "title": "牧童詩",
    "author": "黃庭堅",
    "content": [
      "騎牛遠遠過前村",
      "短笛橫吹隔隴聞",
      "多少長安名利客",
      "機關用盡不如君"
    ]
  },
  {
    "title": "和子由澠池懷舊",
    "author": "蘇軾",
    "content": [
      "人生到處知何似",
      "應似飛鴻踏雪泥",
      "泥上偶然留指爪",
      "鴻飛那復計東西",
      "老僧已死成新塔",
      "壞壁無由見舊題",
      "往日崎嶇還記否",
      "路長人困蹇驢嘶"
    ]
  },
  {
    "title": "詠柳",
    "author": "曾鞏",
    "content": [
      "亂條猶未變初黃",
      "倚得東風勢便狂",
      "解把飛花蒙日月",
      "不知天地有清霜"
    ]
  },
  {
    "title": "畫眉鳥",
    "author": "歐陽修",
    "content": [
      "百囀千聲隨意移",
      "山花紅紫樹高低",
      "始知鎖向金籠聽",
      "不及林間自在啼"
    ]
  },
  {
    "title": "戲答元珍",
    "author": "歐陽修",
    "content": [
      "春風疑不到天涯",
      "二月山城未見花",
      "殘雪壓枝猶有桔",
      "凍雷驚筍欲抽芽",
      "夜聞歸雁生鄉思",
      "病入新年感物華",
      "曾是洛陽花下客",
      "野芳雖晚不須嗟"
    ]
  },
  {
    "title": "東溪",
    "author": "梅堯臣",
    "content": [
      "行到東溪看水時",
      "坐臨孤嶼發船遲",
      "野鳧眠岸有閑意",
      "老樹著花無醜枝",
      "短短蒲耳齊似剪",
      "平平沙石淨於篩",
      "情雖不厭住不得",
      "薄暮歸來車馬疲"
    ]
  },
  {
    "title": "落花",
    "author": "宋祁",
    "content": [
      "墜素翻紅各自傷",
      "青樓煙雨忍相忘",
      "將飛更作迴風舞",
      "已落猶成半面妝",
      "滄海客歸珠有淚",
      "章臺人去骨遺香",
      "可能無意傳雙蝶",
      "盡付芳心與蜜房"
    ]
  },
  {
    "title": "柳",
    "author": "寇準",
    "content": [
      "曉帶輕煙間杏花",
      "晚凝深翠拂平沙",
      "長條別有風流處",
      "密映錢塘蘇小家"
    ]
  }
]
